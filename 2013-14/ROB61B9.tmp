#include "JoystickDriver.c"

task main()
{
	while (true) {
		getJoystickSettings(joystick);

		if(joystick.joy1_TopHat == 0) {
			motor[DRIVE_NE]= 100;
			motor[DRIVE_NW]= 100;
			motor[DRIVE_SE]= 100;
			motor[DRIVE_SW]= 100;
		}
		else if(joystick.joy1_TopHat == 2) {
			motor[DRIVE_NE]= 100;
			motor[DRIVE_NW]= -100;
			motor[DRIVE_SE]= -100;
			motor[DRIVE_SW]= 100;
		}
		else if(joystick.joy1_TopHat == 4) {
			motor[DRIVE_NE]= -100;
			motor[DRIVE_NW]= -100;
			motor[DRIVE_SE]= -100;
			motor[DRIVE_SW]= -100;
		}
		else if(joystick.joy1_TopHat == 6) {
			motor[DRIVE_NE]= -100;
			motor[DRIVE_NW]= 100;
			motor[DRIVE_SE]= 100;
			motor[DRIVE_SW]= -100;
		}
		else {
			motor[DRIVE_NE]= 0;
			motor[DRIVE_NW]= 0;
			motor[DRIVE_SE]= 0;
			motor[DRIVE_SW]= 0;
		}


		if ((joystick.joy1_y1<=5 && joystick.joy1_y1>=-5) && (joystick.joy1_x1<=5 && joystick.joy1_x1>=-5))
		{
		}
	}
}
